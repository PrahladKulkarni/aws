{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template demonstrates the creation of a DynamoDB table and the use of a custom resource to generate the table name.",
    "Parameters": {
        "TableNamePrefixParam": {
            "Description": "Prefix for the autogenerated table name, SSM parameter name",
            "Type": "AWS::SSM::Parameter::Value<String>",
            "Default": "/dynamodb/tablenameprefix"
          },
        "SNStopicParam": {
            "Description": "The SNS topic ARN for the table name generator custom resource",
            "Type": "String",
            "Default": "arn:aws:sns:us-west-2:691995883950:CustomCFNResourceTopic"
        },
        "HashKeyElementName": {
            "Description": "HashType PrimaryKey Name",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9]*",
            "MinLength": "1",
            "MaxLength": "2048",
            "ConstraintDescription": "must contain only alphanumberic characters"
        },
        "HashKeyElementType": {
            "Description": "HashType PrimaryKey Type",
            "Type": "String",
            "Default": "S",
            "AllowedPattern": "[S|N]",
            "MinLength": "1",
            "MaxLength": "1",
            "ConstraintDescription": "must be either S or N"
        },
        "ReadCapacityUnits": {
            "Description": "Provisioned read throughput",
            "Type": "Number",
            "Default": "5",
            "MinValue": "5",
            "MaxValue": "10000",
            "ConstraintDescription": "must be between 5 and 10000"
        },
        "WriteCapacityUnits": {
            "Description": "Provisioned write throughput",
            "Type": "Number",
            "Default": "10",
            "MinValue": "5",
            "MaxValue": "10000",
            "ConstraintDescription": "must be between 5 and 10000"
        }
    },
    "Resources": {
        "myDynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "DependsOn": [
                "TableNameGenerator"
            ],
            "Properties": {
                "TableName": {
                    "Fn::GetAtt": [
                        "TableNameGenerator",
                        "tableName"
                    ]
                },
                "AttributeDefinitions": [
                    {
                        "AttributeName": {
                            "Ref": "HashKeyElementName"
                        },
                        "AttributeType": {
                            "Ref": "HashKeyElementType"
                        }
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": {
                            "Ref": "HashKeyElementName"
                        },
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": {
                        "Ref": "ReadCapacityUnits"
                    },
                    "WriteCapacityUnits": {
                        "Ref": "WriteCapacityUnits"
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "5c2a31b8-63e4-4efd-8f11-d85fcbb5667a"
                }
            }
        },
        "TableNameGenerator": {
            "Type": "AWS::CloudFormation::CustomResource",
            "DeletionPolicy": "Retain",
            "Properties": {
                "ServiceToken": {
                    "Ref": "SNStopicParam"
                },
                "TableNamePrefix": {
                    "Ref": "TableNamePrefixParam"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "3c888476-4433-4fc1-ae36-8a0acc6594ba"
                }
            }
        }
    },
    "Outputs": {
        "GeneratedTableName": {
            "Value": {
                "Fn::GetAtt": [
                    "TableNameGenerator",
                    "tableName"
                ]
            },
            "Description": "Table name, generated by the Custom Resource",
            "Export": {
                "Name": "DynamoDB-TableName" 
            }
        },
        "TableName": {
            "Value": {
                "Ref": "myDynamoDBTable"
            },
            "Description": "Table name of the newly created DynamoDB table"
        }
    }
}